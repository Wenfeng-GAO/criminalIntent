<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
       <LinearLayout 
        android:layout_width="match_parent"
       	android:layout_height="wrap_content"
       	android:orientation="horizontal"
       	android:layout_marginLeft="16dp"
       	android:layout_marginTop="16dp" >
        
        <LinearLayout 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginRight="4dp" >
            
            <ImageButton 
                android:id="@+id/imageButton_crime_photo_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@android:drawable/ic_menu_camera" />
            
        </LinearLayout>
        
        <LinearLayout 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1" >
            
            <TextView
                android:id="@+id/textview_crime_title"
                style="?android:attr/listSeparatorTextViewStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/textview_crime_title_label" />
            <EditText
                android:id="@+id/edittext_crime_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:hint="@string/textview_crime_title_hint" />
            
        </LinearLayout>
        
    </LinearLayout>
    
    <TextView 
        android:id="@+id/textview_crime_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/textview_crime_details"
        style="?android:attr/listSeparatorTextViewStyle" />
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
        
        <Button 
        android:id="@+id/button_crime_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="4"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="#eff" />
        
        <Button
        android:id="@+id/button_crime_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="#eff" />

    	<CheckBox 
        android:id="@+id/checkbox_crime_solved"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="@string/checkbox_crime_solved"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp" />
    	
    </LinearLayout>
    
</LinearLayout>
