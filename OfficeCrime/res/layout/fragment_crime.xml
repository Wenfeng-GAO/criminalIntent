<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <TextView 
        android:id="@+id/textview_crime_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/textview_crime_title_label"
        style="?android:attr/listSeparatorTextViewStyle" />
    
    <EditText 
        android:id="@+id/edittext_crime_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/textview_crime_title_hint"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp" />
    
    <TextView 
        android:id="@+id/textview_crime_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/textview_crime_details"
        style="?android:attr/listSeparatorTextViewStyle" />
    
    <Button 
        android:id="@+id/button_crime_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="#eff" />
    
    <Button 
        android:id="@+id/button_crime_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="2dp"
        android:background="#eff" />

    <CheckBox 
        android:id="@+id/checkbox_crime_solved"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/checkbox_crime_solved"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp" />
</LinearLayout>
